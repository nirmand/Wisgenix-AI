    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch AIUpskllingPlatform.API",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/AIUpskillingPlatform.API/bin/Debug/net9.0/AIUpskillingPlatform.API.dll",
            "cwd": "${workspaceFolder}/AIUpskillingPlatform.API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}